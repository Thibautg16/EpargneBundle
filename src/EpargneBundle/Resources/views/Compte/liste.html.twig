{# Epargne/Resources/views/Compte/liste.html.twig #}
 
{% extends "Thibautg16SqueletteBundle::layout.html.twig" %}
 
{% block title %}
	{{ parent() }} - Liste Comptes
{% endblock %}

{% block fil_ariane %} 
	{{ parent() }} 
    <li><a href="#">Accueil</a></li>
    <li class="active"><a href="{{ path('epargne_compte_liste') }}">Comptes</a></li>
{% endblock %}

{% block body_thibautg16 %}    
    <div class="col-sm-12">
        <fieldset>       
		  <legend><h3>Liste des comptes</h3></legend>
    	    <input id="filter" class="form-control" type="text" placeholder="Recherche">
    	    <br/>
		<table class="table footable" data-page-size="10" data-filter="#filter">
        	<thead>
                <tr>
                    <th data-toggle="true" data-type="numeric">#</th>
                    <th>Nom</th>
                    <th data-hide="phone,tablet">Num√©ro</th>
                    <th data-hide="phone,tablet">Compagnie</th>
                    <th>Type</th>
                    <th>Voir</th>
                    <th>Ajouter</th>
                    <th>Importer</th>
                    <th>Graph</th>
                    <th>Modifier</th>
                    <th>Supprimer</th>
                </tr>
    		</thead>
            
        	<tbody>
                {% for compte in listeCompte %}        
                <tr>
                    <td> {{ compte.id }} </td>
                    <td> {% if compte.nom is defined %} {{ compte.nom }} {% endif %} </td>       
                    <td> {% if compte.numero is defined %} {{ compte.numero }} {% endif %} </td>
                    <td> {% if compte.compagnie is defined %} {{ compte.compagnie }} {% endif %} </td>
                    <td> {% if compte.type is defined %} {{ compte.type }} {% endif %} </td>
                    <td><a href="{{ path('epargne_ligne_liste', {'idCompte':compte.id}) }}"><span class="glyphicon glyphicon-eye-open"></span></a></td>
                    <td><a href="{{ path('epargne_ligne_ajouter', {'idCompte':compte.id}) }}"><span class="glyphicon glyphicon-plus"></span></a></td>
                    <td><a href="{{ path('epargne_ligne_importer', {'idCompte':compte.id}) }}"><span class="glyphicon glyphicon-download-alt"></span></a></td>
                    <td><a href="{{ path('epargne_compte_graph', {'idCompte':compte.id}) }}"><span class="glyphicon glyphicon-signal"></span></a></td>
                    <td><a href=""><span class="glyphicon glyphicon-pencil"></span></a></td>
                    <td><a href=""><span class="glyphicon glyphicon-remove"></span></a></td>
                </tr>
                {% endfor %}
    		</tbody>

            <tfoot class="hide-if-no-paging">
                    <tr>
                            <td colspan="9">
                                    <div class="pagination pagination-centered"></div>
                            </td>
                    </tr>
            </tfoot>
		</table>
        </fieldset>
	</div>
{% endblock %}