{# src/EpargneBundle/Resources/views/Lignes/modifier.html.twig #}

{% extends "Thibautg16SqueletteBundle::layout.html.twig" %}

{% block title %}
	{{ parent() }} - Modifier Ligne
{% endblock %}

{% block fil_ariane %} 
	{{ parent() }} 
    <li><a href="#">Accueil</a></li>
    <li class="active"><a href="{{ path('epargne_compte_liste') }}">Comptes</a></li>
{% endblock %}

{% block body_thibautg16 %}    
    <div class="col-sm-12">
		<fieldset>
			<legend><h3>Ligne N°{{oLigne.id}}</h3></legend>

						{{ form_start(form, {'attr': {'class': 'form-horizontal'}}) }}
						
								{# Les erreurs générales du formulaire. #}
								{{ form_errors(form) }}
								
								<div class="form-group">
								  {{ form_label(form.type, "Type :", {'label_attr': {'class': 'col-sm-3 control-label'}}) }}
								  {{ form_errors(form.type) }}
								  <div class="col-sm-4">
									{{ form_widget(form.type, {'attr': {'class': 'form-control'}}) }}
								  </div>
								</div>

								<div class="form-group">
								  {{ form_label(form.designation, "Désignation :", {'label_attr': {'class': 'col-sm-3 control-label'}}) }}
								  {{ form_errors(form.designation) }}
								  <div class="col-sm-4">
									{{ form_widget(form.designation, {'attr': {'class': 'form-control'}}) }}
								  </div>
								</div>

								<div class="form-group">
								  {{ form_label(form.libelle, "Libelle :", {'label_attr': {'class': 'col-sm-3 control-label'}}) }}
								  {{ form_errors(form.libelle) }}
								  <div class="col-sm-4">
									{{ form_widget(form.libelle, {'attr': {'class': 'form-control'}}) }}
								  </div>
								</div>  
								
								{% if form.montant is defined %}
									<div class="form-group">
									{{ form_label(form.montant, "Montant:", {'label_attr': {'class': 'col-sm-3 control-label'}}) }}
									{{ form_errors(form.montant) }}
									<div class="col-sm-4">
										{{ form_widget(form.montant, {'attr': {'class': 'form-control'}}) }}
									</div>
									</div>
								{% endif %}								
																																
								<div class="form-group">
								  {{ form_label(form.dateOperation, "Date Opération :", {'label_attr': {'class': 'col-sm-3 control-label'}}) }}
								  {{ form_errors(form.dateOperation) }}
								  <div class="col-sm-4">
									{{ form_widget(form.dateOperation, {'attr': {'class': 'form-control'}}) }}
								  </div>
								</div>
								
								<div class="form-group">
								  {{ form_label(form.dateValeur, "Date Valeur :", {'label_attr': {'class': 'col-sm-3 control-label'}}) }}
								  {{ form_errors(form.dateValeur) }}
								  <div class="col-sm-4">
									{{ form_widget(form.dateValeur, {'attr': {'class': 'form-control'}}) }}
								  </div>
								</div>
								
								<div class="form-group">
								  {{ form_label(form.refBanque, "Réf. Banque :", {'label_attr': {'class': 'col-sm-3 control-label'}}) }}
								  {{ form_errors(form.refBanque) }}
								  <div class="col-sm-4">
									{{ form_widget(form.refBanque, {'attr': {'class': 'form-control'}}) }}
								  </div>
								</div>  
								
								<div class="form-group">
									<span class="col-sm-3 control-label"> &nbsp; </span>
								  <div class="col-sm-4 btn-center">
									{# Pour le bouton, pas de label ni d'erreur, on affiche juste le widget #}
									{{ form_widget(form.Modifier, {'attr': {'class': 'btn btn-primary'}}) }} 
								  </div>
								</div>   									  
								
							  {# Génération automatique des champs pas encore écrits.
								 Dans cet exemple, ce serait le champ CSRF (géré automatiquement par Symfony !)
								 et tous les champs cachés (type « hidden »). #}
							  {{ form_rest(form) }}
							  
							  {# Fermeture de la balise <form> du formulaire HTML #}
							  {{ form_end(form) }}   
							  							    
		</fieldset>
    </div>
{% endblock %}